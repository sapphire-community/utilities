{
	"packages": ["packages/*"],
	"version": "independent",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"publish": {
			"conventionalCommits": true,
			"push": true,
			"ignoreChanges": [
				"**/*.md",
				"**/tests/**",
				"**/dist/**",
				"**/build/**",
				"**/.turbo/**",
				"**/.gitignore",
				"**/tsup.config.ts",
				"**/jest.config.ts",
				"**/*.d.ts",
				"**/packages/async-queue/**/tsconfig.json",
				"**/packages/decorators/**/tsconfig.json",
				"**/packages/discord-utilities/**/tsconfig.json",
				"**/packages/discord.js-utilities/**/tsconfig.json",
				"**/packages/embed-jsx/**/tsconfig.json",
				"**/packages/eslint-config/**/tsconfig.json",
				"**/packages/event-iterator/**/tsconfig.json",
				"**/packages/fetch/**/tsconfig.json",
				"**/packages/phisherman/**/tsconfig.json",
				"**/packages/prettier-config/**/tsconfig.json",
				"**/packages/ratelimits/**/tsconfig.json",
				"**/packages/result/**/tsconfig.json",
				"**/packages/snowflake/**/tsconfig.json",
				"**/packages/stopwatch/**/tsconfig.json",
				"**/packages/time-utilities/**/tsconfig.json",
				"**/packages/utilities/**/tsconfig.json",
				"**/packages/**/tsconfig.eslint.json"
			],
			"registry": "https://registry.npmjs.org/"
		},
		"version": {
			"allowBranch": "main",
			"conventionalCommits": true,
			"push": true,
			"createRelease": "github",
			"message": "chore(release): publish"
		},
		"create": {
			"license": "MIT",
			"keywords": ["sapphiredev", "bot", "typescript", "ts", "yarn", "discord", "sapphire", "standalone"]
		}
	}
}
